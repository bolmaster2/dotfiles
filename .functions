# Date helper function
# Usage:
# ```
# now
# // Show as UTC
# now -u
# ```
#
function now {
  date $1 +"%Y-%m-%d %T"
}

# Export .env file as environment variables with `export`. Work with comments in file
function exportdotenv {
  [ -s ".env" ] || return 1;
  # Doesn't work with vars with spaces. Use `source .env` instead, just remember to quote vars. Read more: https://gist.github.com/judy2k/7656bfe3b322d669ef75364a46327836
  export $(cat .env | grep -v "^#")
  echo "Current env variables:"
  env
}
