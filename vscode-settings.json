{
  "editor.fontSize": 16,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.fontFamily": "Fira Code",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "selection",
  "editor.scrollBeyondLastLine": false,
  "editor.cursorBlinking": "solid",
  "editor.formatOnSave": true,
  "editor.rulers": [80, 120],
  "editor.renderControlCharacters": false,
  "editor.suggestSelection": "first",
  "workbench.colorTheme": "Solarized Dark",
  "workbench.activityBar.visible": false,
  "workbench.editor.tabSizing": "shrink",
  "workbench.settings.editor": "json",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#073642"
  },
  "window.zoomLevel": 0,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "files.watcherExclude": {
    "vendor/**": true
  },
  "ruby.useBundler": true,
  "ruby.lint": {
    "rubocop": true,
    "ruby": true //Runs ruby -wc
  },
  "ruby.intellisense": "rubyLocate",
  "workbench.statusBar.feedback.visible": false,
  "search.exclude": {
    "vendor/": true
  },
  "breadcrumbs.enabled": true,
  "explorer.openEditors.visible": 0,
  "search.showLineNumbers": true,
  "todohighlight.defaultStyle": {
    "isWholeLine": true
  },
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      // Colors picked from: https://en.wikipedia.org/wiki/Solarized_(color_scheme)
      "color": "#cb4b16", // Orange
      // "color": "#6c71c4", // Violet
      // "color": "#d33682", // Magenta
      // "color": "#268bd2", // Blue
      // "color": "#2aa198", // Cyan
      // "color": "#dc322f", // Red
      "backgroundColor": "#073642",
      // "backgroundColor": "#002b36", // Same as org bg
      "overviewRulerColor": "#cb4b16"
    }
  ],
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "maven.executable.path": "/usr/local/bin/mvn",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "timing.insertConvertedTime": true,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "go.formatTool": "goimports",
  // "go.useLanguageServer": true,
  "go.lintOnSave": "file",
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "gitlens.hovers.enabled": false,
  "eslint.enable": true,
  "eslint.autoFixOnSave": false,
  "eslint.alwaysShowStatus": true,
  "eslint.options": {
    "extensions": [".html", ".js", ".jsx", ".ts"]
  },
  "javascript.suggestionActions.enabled": true,
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "python.jediEnabled": false,
  "terminal.integrated.fontSize": 16,
  "plantuml.server": "http://plantuml.com/plantuml",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
